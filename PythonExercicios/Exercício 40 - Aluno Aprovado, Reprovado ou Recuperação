Nota_1 = float(input('Digite a primeira nota: '))
Nota_2 = float(input('Digite a segunda nota: '))
media_aprovação = 6
recuperação = 5.1
nota_media = (Nota_1 + Nota_2)/2
if nota_media >= media_aprovação:
    print('A média do aluno é {}. Ele está APROVADO!'.format(nota_media))
elif nota_media < media_aprovação and nota_media >= recuperação:
    print('A média do aluno é {}. Ele está em RECUPERAÇÃO!'.format(nota_media))
elif nota_media < recuperação:
    print('A média do aluno é {}. Ele está REPROVADO!'.format(nota_media))
    
